<h1>Tables - <%= link_to 'New Table', new_table_path %></h1>
<table>
  <thead>
    <tr>
      <td>Number</td>
      <td>Description</td>
      <td></td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @tables.each do |table| %>
      <tr>
        <td><%= table.number %></td>
        <td><%= table.description %></td>
        <td><%= link_to 'View', table_path(table) %></td>
        <td><%= link_to 'Edit', edit_table_path(table) %></td>
        <td><%= link_to 'Delete', table_path(table), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
